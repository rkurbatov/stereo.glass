.lang-selector(style='width: 7vw;')
    ul.lang-selector(style='position: absolute')
        li.one-lang(style='display: block;'
        ng-repeat='lang in IntSvc.langs'
        ng-if='lang.code !== IntSvc.currentLang && lang.isActive'
        ng-click='IntSvc.switchLang(lang.code)')
            img(ng-src="{{ 'img/flags/' + lang.code + '.png' }}")
            span {{ lang }}