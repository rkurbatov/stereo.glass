.modal-header
    button.close(type="button"
    data-dismiss="modal"
    aria-hidden="true"
    ng-click="vm.cancel();")
        i.fa.fa-remove
    h5.modal-title Редактирование макета

.modal-body: form(name='editUser')
    .form-group
        label.control-label Название
        input.form-control(ng-required="", autofocus, ng-model="vm.layout.name")
    .form-group
        label.control-label.small Товары
        bootstrap-select.col-xs-12(ng-required=""
        multiple
        data='vm.categories.assortment'
        selection="vm.layout.catAssortment")
    .form-group
        label.control-label Цвета
        bootstrap-select.col-xs-12(ng-required=""
        simple multiple
        data='vm.categories.colors'
        selection="vm.layout.catColors")
    .form-group
        label.control-label Сюжеты
        bootstrap-select.col-xs-12(ng-required=""
        simple multiple
        data='vm.categories.plots'
        selection="vm.layout.catPlots")
    .form-group
        label.control-label Страны
        bootstrap-select.col-xs-12(ng-required=""
        simple multiple
        data='vm.categories.countries'
        selection="vm.layout.catCountries")



