.ns-popover-tooltip
    .popover-info-block
        .designer-comment
            .popover-comment-header
                b(ng-style='paginator.getCommenterTextColor(layout.createdBy)') {{ layout.createdBy }}
                |  добавил(-а) изображение
                i  {{ layout.createdAt | date : 'd MMM, H:mm' }}
            .popover-comment-text
                | {{ layout.designerComment }}
        .assigned-comment(ng-show='layout.status')
            hr
            .popover-comment-header
                b(ng-style='paginator.getCommenterTextColor(layout.assignedBy)') {{ layout.assignedBy }}
                |  назначил исполнителем
                b(ng-style='paginator.getCommenterTextColor(layout.assignedTo)')  {{ layout.assignedTo }}
                i  {{ layout.assignedAt | date : 'd MMM, H:mm' }}
            .popover-comment-text
                | {{ layout.assignedComment }}
        .accepted-comment(ng-show='_.contains(["accepted", "finished"], layout.status)')
            hr
            .popover-comment-header
                b(ng-style='paginator.getCommenterTextColor(layout.assignedTo)') {{ layout.assignedTo }}
                |  принял(-а) задание
                i  {{ layout.acceptedAt | date : 'd MMM, H:mm' }}
            .popover-comment-text
                | {{ layout.acceptedComment }}
        .rejected-comment(ng-show='layout.status === "rejected"')
            hr
            .popover-comment-header
                b(ng-style='paginator.getCommenterTextColor(layout.assignedTo)') {{ layout.assignedTo }}
                |  отказался(-ась) от задания
                i  {{ layout.acceptedAt | date : 'd MMM, H:mm' }}
                .popover-comment-text
                | {{ layout.acceptedComment }}
        .finished-comment(ng-show='layout.status === "finished"')
            hr
            .popover-comment-header
                b(ng-style='paginator.getCommenterTextColor(layout.assignedTo)') {{ layout.assignedTo }}
                |  загрузил(-а) макет
                i  {{ layout.finishedAt | date : 'd MMM, H:mm' }}
            .popover-comment-text
                | {{ layout.finishedComment }}
        .approved-comment(ng-show='layout.status === "approved"')
            hr
            .popover-comment-header
                b(ng-style='paginator.getCommenterTextColor(layout.assignedBy)') {{ layout.assignedBy }}
                |  одобрил(-а) макет
                i  {{ layout.approvedAt | date : 'd MMM, H:mm' }}
            .popover-comment-text
                | {{ layout.approvedComment }}
