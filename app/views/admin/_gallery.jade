.panel(ng-controller='Paginator as paginator')
    br
    //- Switch mode
    .row
        .col-xs-1
            | &nbsp;&nbsp;
            label.btn.btn-danger(ng-click="paginator.resetAll()")
                i.fa.fa-close.
        .col-xs-2
            .form-group
                label.control-label Найдено
                | &nbsp;&nbsp;
                label.btn.btn-default(ng-disabled='true') {{ paginator.filteredLayouts.length }}
        .col-xs-9
            include gallery/paginator-viewMode.jade

    .row
        //- Server filters
        include gallery/paginator-serverFilters

    .row
        include gallery/paginator-clientFilters
        

    //- top pagination controls
    include gallery/paginator-controls

    //- pagination
    .row: ul.sg-layout-list
        li.sg-layout.col-xs-6.col-sm-3.col-md-3.col-lg-2(current-page="paginator.currentPage"
        dir-paginate="layout in paginator.filteredLayouts = (paginator.rawLayouts | \
                filter: paginator.viewModeFilter | filter: paginator.search.filter | \
                orderBy: paginator.sortOrder.current.value) | \
                itemsPerPage: paginator.currentItemsPerPage")
            //- layout controls
            sg-layout-toolbar(layout='layout')
            //- layout-block
            include gallery/layout-block

    //- bottom pagination controls
    include gallery/paginator-controls