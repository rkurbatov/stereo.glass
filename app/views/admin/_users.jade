.panel.panel-default
    .row
        .col-sm-12.col-lg12.col-xs-12(ng-controller='sgUsersCtrl')
            table.table.table-striped(st-table='row-collection')
                thead
                    tr
                        th
                            i#users-refresh.fa.fa-refresh(ng-click='loadData()')
                            |  username
                        th usermail
                        th Роль
                        th Создан
                        th Был активен
                tbody(ng-repeat='row in rowCollection')
                    tr
                        td {{row.username}}
                        td: a(ng-href='mailto:{{row.usermail}}') email
                        td {{row.role}}
                        td {{row.createdAt | date}}
                        td {{row.activeAt | date: 'short'}}
