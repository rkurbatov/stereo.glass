sg-event-listener
.main-carousel
    .horizon-prev(ng-click='header.scrollLeft()')
        i.fa.fa-chevron-circle-left.fa-3x
    .horizon-next(ng-click='header.scrollRight()')
        i.fa.fa-chevron-circle-right.fa-3x
    .sg-carousel-section: .centered-content
        .sg-video-overlay(for='.videoclip'
        ng-show='carousel.settings.currentPage === "index"')
        video.videoclip(preload='metadata')
            source(src='/video/clip.mp4')
            source(src='/video/clip.webm' type='video/webm')
        img#cinema.bg-room(ng-src="{{carousel.getBkSrc('cinema')}}")
    .sg-carousel-section: .centered-content
        .sg-plate3d(coords='{{carousel.settings.coords.clock}}'
        style='width: 300px; height: 300px;'
        for='main-living-room')
            img(sg-alt-src="clock" style='width: 100%; height: 100%;')
        .sg-plate3d(coords='{{carousel.settings.coords.buddha}}'
        style='width: 460px; height: 260px'
        for='main-living-room')
            img(sg-alt-src="buddha" style='width: 100%; height: 100%;')
        img#main-living-room.bg-room(ng-src="{{carousel.getBkSrc('livingroom')}}")
    .sg-carousel-section: .centered-content
        .sg-plate3d(coords='{{carousel.settings.coords.kitchen1}}' for='main-kitchen')
            img(sg-alt-src="kitchen-wl1")
        .sg-plate3d(coords='{{carousel.settings.coords.kitchen2}}' for='main-kitchen')
            img(sg-alt-src="kitchen-wl2")
        .sg-plate3d(coords='{{carousel.settings.coords.kitchen3}}' for='main-kitchen')
            img(sg-alt-src="kitchen-wl3")
        .sg-plate3d(style="width: 1200px; height: 1200px;" coords='{{carousel.settings.coords.kitchenfloor}}' for='main-kitchen')
            include floor/_kitchen
        img#main-kitchen.bg-room(ng-src="{{carousel.getBkSrc('kitchen')}}")
    .sg-carousel-section: .centered-content
        .sg-plate3d(coords='{{carousel.settings.coords.teddybear}}'
        style='width: 723px; height: 600px;'
        for='main-childroom')
            img(sg-alt-src="teddybear" style='width: 100%; height: 100%;')
        .sg-plate3d(coords='{{carousel.settings.coords.teddyhare}}' for='main-childroom')
            img(sg-alt-src="teddyhare")
        img.sg-plate3d(coords='{{carousel.settings.coords.teddycat}}' for='main-childroom' sg-alt-src="teddycat")
        img#main-childroom.bg-room(ng-src="{{carousel.getBkSrc('childroom')}}")
    .sg-carousel-section: .centered-content
        .sg-plate3d(coords='{{carousel.settings.coords.pavilion}}'
        style='width: 600px; height: 437px'
        for='main-bathroom')
            img(sg-alt-src="pavilion"
            style='width: 100%; height: 100%')
        .sg-plate3d(coords='{{carousel.settings.coords.mirror}}'
        for='main-bathroom'
        style='width: 600px; height: 437px; z-index:9;')
            img(sg-alt-src="pavilion"
            style="width: 100%; height: 100%;")
        .sg-plate3d(style="width: 500px; height: 500px;", coords='{{carousel.settings.coords.bathfloor}}' for='main-bathroom')
            include floor/_bathroom
        img#main-bathroom.bg-room(ng-src="{{carousel.getBkSrc('bathroom')}}")
    .sg-carousel-section: .centered-content
        .sg-plate3d(coords='{{carousel.settings.coords.aqualeft}}'
        style='width: 400px; height: 250px'
        for='main-club')
            img(sg-alt-src="aqua" style='width: 100%; height: 100%')
        .sg-plate3d(coords='{{carousel.settings.coords.aquaright}}'
        style='width: 400px; height: 250px'
        for='main-club')
            img(sg-alt-src="aqua" style='width: 100%; height: 100%')
        .sg-plate3d(style="width: 900px; 600px;", coords='{{carousel.settings.coords.clubfloor}}' for='main-club')
            include floor/_club
        img#main-club.bg-room(ng-src="{{carousel.getBkSrc('club')}}")
    .sg-carousel-section: .centered-content
        .sg-plate3d(coords='{{carousel.settings.coords.tray}}' for='main-caffee')
            img(sg-alt-src="tray")
        .sg-plate3d(coords='{{carousel.settings.coords.tableft}}' for='main-caffee')
            img(sg-alt-src="tableft")
        .sg-plate3d(coords='{{carousel.settings.coords.tabmid}}' for='main-caffee')
            img(sg-alt-src="tabmid")
        .sg-plate3d(coords='{{carousel.settings.coords.tabright}}' for='main-caffee')
            img(sg-alt-src="tabright")
        .sg-plate3d(coords='{{carousel.settings.coords.advert}}' for='main-caffee')
            img(sg-alt-src="advert")
        img#main-caffee.bg-room(ng-src="{{carousel.getBkSrc('caffee')}}")
