sg-event-listener
.main-carousel
    .horizon-prev(ng-click='header.scrollLeft()')
        i.fa.fa-chevron-circle-left.fa-3x
    .horizon-next(ng-click='header.scrollRight()')
        i.fa.fa-chevron-circle-right.fa-3x
    section.sg-main-sec0.sg-hor-scroll.sg-carousel-section(sg-center-vertical sg-scroller-section)
        .sg-video-overlay(for='videoclip' sg-center-vertical='-'
        ng-show='index.settings.currentPage === "index"')
        video#videoclip(preload='metadata' sg-center-vertical='-')
            source(src='/video/clip.mp4')
            source(src='/video/clip.webm' type='video/webm')
        img#cinema.bg-room(ng-src="{{index.getBkSrc('cinema')}}")
    section.sg-main-sec1.sg-hor-scroll.sg-carousel-section(sg-center-vertical sg-scroller-section)
        .sg-plate3d(coords='{{index.settings.coords.clock}}'
        style='width: 300px; height: 300px;'
        for='main-living-room')
            img(sg-alt-src="clock" style='width: 100%; height: 100%;')
        .sg-plate3d(coords='{{index.settings.coords.buddha}}'
        style='width: 460px; height: 260px'
        for='main-living-room')
            img(sg-alt-src="buddha" style='width: 100%; height: 100%;')
        img#main-living-room.bg-room(ng-src="{{index.getBkSrc('livingroom')}}")
    section.sg-main-sec2.sg-hor-scroll.sg-carousel-section(sg-center-vertical sg-scroller-section)
        .sg-plate3d(coords='{{index.settings.coords.kitchen1}}' for='main-kitchen')
            img(sg-alt-src="kitchen-wl1")
        .sg-plate3d(coords='{{index.settings.coords.kitchen2}}' for='main-kitchen')
            img(sg-alt-src="kitchen-wl2")
        .sg-plate3d(coords='{{index.settings.coords.kitchen3}}' for='main-kitchen')
            img(sg-alt-src="kitchen-wl3")
        .sg-plate3d(style="width: 1200px; height: 1200px;" coords='{{index.settings.coords.kitchenfloor}}' for='main-kitchen')
            include index-floor/_kitchen
        img#main-kitchen.bg-room(ng-src="{{index.getBkSrc('kitchen')}}")
    section.sg-main-sec3.sg-hor-scroll.sg-carousel-section(sg-center-vertical sg-scroller-section)
        .sg-plate3d(coords='{{index.settings.coords.teddybear}}'
        style='width: 723px; height: 600px;'
        for='main-childroom')
            img(sg-alt-src="teddybear" style='width: 100%; height: 100%;')
        .sg-plate3d(coords='{{index.settings.coords.teddyhare}}' for='main-childroom')
            img(sg-alt-src="teddyhare")
        img.sg-plate3d(coords='{{index.settings.coords.teddycat}}' for='main-childroom' sg-alt-src="teddycat")
        img#main-childroom.bg-room(ng-src="{{index.getBkSrc('childroom')}}")
    section.sg-main-sec4.sg-hor-scroll.sg-carousel-section(sg-center-vertical sg-scroller-section)
        .sg-plate3d(coords='{{index.settings.coords.pavilion}}'
        style='width: 600px; height: 437px'
        for='main-bathroom')
            img(sg-alt-src="pavilion"
            style='width: 100%; height: 100%')
        .sg-plate3d(coords='{{index.settings.coords.mirror}}'
        for='main-bathroom'
        style='width: 600px; height: 437px; z-index:9;')
            img(sg-alt-src="pavilion"
            style="width: 100%; height: 100%;")
        .sg-plate3d(style="width: 500px; height: 500px;", coords='{{index.settings.coords.bathfloor}}' for='main-bathroom')
            include index-floor/_bathroom
        img#main-bathroom.bg-room(ng-src="{{index.getBkSrc('bathroom')}}")
    section.sg-main-sec5.sg-hor-scroll.sg-carousel-section(sg-center-vertical sg-scroller-section)
        .sg-plate3d(coords='{{index.settings.coords.aqualeft}}'
        style='width: 400px; height: 250px'
        for='main-club')
            img(sg-alt-src="aqua" style='width: 100%; height: 100%')
        .sg-plate3d(coords='{{index.settings.coords.aquaright}}'
        style='width: 400px; height: 250px'
        for='main-club')
            img(sg-alt-src="aqua" style='width: 100%; height: 100%')
        .sg-plate3d(style="width: 900px; 600px;", coords='{{index.settings.coords.clubfloor}}' for='main-club')
            include index-floor/_club
        img#main-club.bg-room(ng-src="{{index.getBkSrc('club')}}")
    section.sg-main-sec6.sg-hor-scroll.sg-carousel-section(sg-center-vertical sg-scroller-section)
        .sg-plate3d(coords='{{index.settings.coords.tray}}' for='main-caffee')
            img(sg-alt-src="tray")
        .sg-plate3d(coords='{{index.settings.coords.tableft}}' for='main-caffee')
            img(sg-alt-src="tableft")
        .sg-plate3d(coords='{{index.settings.coords.tabmid}}' for='main-caffee')
            img(sg-alt-src="tabmid")
        .sg-plate3d(coords='{{index.settings.coords.tabright}}' for='main-caffee')
            img(sg-alt-src="tabright")
        .sg-plate3d(coords='{{index.settings.coords.advert}}' for='main-caffee')
            img(sg-alt-src="advert")
        img#main-caffee.bg-room(ng-src="{{index.getBkSrc('caffee')}}")
